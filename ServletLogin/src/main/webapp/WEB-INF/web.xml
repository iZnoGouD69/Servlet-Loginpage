<?xml version="1.0" encoding="UTF-8"?>

<web-app>

<servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.example.login.LoginController</servlet-class>
</servlet> 

<servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
</servlet-mapping>


<servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>com.example.login.WelcomeServlet</servlet-class>
</servlet>

<servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
</servlet-mapping>


<servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.example.login.LogoutController</servlet-class>
</servlet> 

<servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
</servlet-mapping>


